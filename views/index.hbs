<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
{{#if user}}
      <p>
        Hello {{user.displayName}}
        |
        <a href="/logout">Logout</a>
      </p>
    {{else}}
      <p>
        <a href="/auth/linkedin">Login</a>
      </p>
    {{/if}}
    <a class="btn btn-default pull-right" href="/logout">Log Out</a>
    {{#if profile}}
      <img src="{{profile.pictureUrl}}">
    {{/if}}
